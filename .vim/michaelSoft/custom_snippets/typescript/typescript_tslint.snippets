snippet tsdis  "Disable all rules for the rest of the file"
/* tslint:disable */
endsnippet

snippet tsen "Enable all rules for the rest of the file"
/* tslint:enable */
endsnippet

snippet tsrl "Disable the listed rules for the rest of the file"
/* tslint:disable:${1:rule1} */
endsnippet

snippet tsnl "Disable next line"
/* tslint:disable-next-line */
endsnippet

snippet tsnlrl "Disable next line rule"
/* tslint:disable-next-line:${1:rule} */
endsnippet

snippet	tsline "Disable this line"
/* tslint:disable-line */
endsnippet

snippet tsna "tslint disable no-any rule"
/* tslint:disable:no-any */
endsnippet

snippet tsmn "Disable magic number rule"
    /* tslint:disable:no-magic-numbers */
endsnippet

snippet tstd "disable tslint typedef requirement"
    /* tslint:disable:typedef */
endsnippet

snippet tsvn "disable variable name requirement"
/* tslint:disable:variable-name */
endsnippet
